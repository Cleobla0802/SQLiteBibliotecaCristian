<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sqlitebibliotecacristian">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CategoriaActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity
            android:name=".activities.CategoriaFormActivity"
            android:parentActivityName=".activities.CategoriaActivity"/>

        <activity
            android:name=".activities.UsuarioActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity
            android:name=".activities.UsuarioFormActivity"
            android:parentActivityName=".activities.UsuarioActivity"/>

        <activity
            android:name=".activities.LibroActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity
            android:name=".activities.LibroFormActivity"
            android:parentActivityName=".activities.LibroActivity"/>

        <activity
            android:name=".activities.PrestamoActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity
            android:name=".activities.PrestamoFormActivity"
            android:parentActivityName=".activities.PrestamoActivity"/>

    </application>

</manifest>